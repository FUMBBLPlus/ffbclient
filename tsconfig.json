{
    "files": [
           "src/**/*.ts"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
		"removeComments": true,
		"preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise"
        ]}
        ,
        "include": [
            "app.ts",
            "commandhandler.ts",
            "controller.ts",
            "commands/*.ts",
            "scenes/*.ts",
            "types/*.ts"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
}
