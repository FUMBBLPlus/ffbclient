{
    "files": [
        "app.ts",
        "commandhandler.ts",
        "controller.ts",
        "commands/*.ts",
        "scenes/*.ts",
        "types/*.ts"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise"
        ]
    },
    "include": [
        "*/*.ts",
	]
}
